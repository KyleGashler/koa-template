{
    "version": "2.0.2",
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es6"],
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "experimentalDecorators": true
    },
    "include": ["./src/**/*"]
}
